
  <h2>{{diary.day}}</h2>
  <h3>Breakfast</h3>
  {{#each diary.breakfast}}
  <div class="row"><div class="col-md-2">
    <img class="thumb" src="../public/images/{{image}}" />
  </div>
    <div class="col-md-7">
      {{name}} ({{grams}}g)
    </div>
    <div class="col-md-3">
      {{kcal}} kcal
    </div>
    </div>
  {{/each}}
  <button class="btn btn-primary addProduct">ADD</button>


  <h3>Lunch</h3>
